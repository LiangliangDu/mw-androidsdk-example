<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.VideoDetailActivity">

    <VideoView
        android:id="@+id/video"
        android:layout_width="match_parent"
        android:layout_height="250dp" />

    <TextView
        android:id="@+id/arts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/video"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/fillet_shape_pink"
        android:paddingBottom="5dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="5dp"
        android:text="综艺"
        android:textColor="@color/white"
        android:textSize="13sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/arts"
        android:layout_toRightOf="@id/arts"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="10dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text="欢乐喜剧人 第二季 岳云鹏笑翻全场"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="10dp"
        android:layout_height="16dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/arts"
        android:layout_marginRight="20dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/next_btn_dark" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/arts"
        android:background="@color/detail_bg" />

    <TextView
        android:id="@+id/play_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="10.2亿次播放" />

    <ImageView
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/play_text"
        android:layout_marginBottom="10dp"
        android:background="@drawable/video_share" />

    <View
        android:id="@+id/line2"
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:layout_alignTop="@id/share"
        android:layout_below="@id/arts"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/share"
        android:background="@color/detail_bg" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/play_text"
        android:layout_toLeftOf="@id/line2"
        android:background="@drawable/video_download" />

</RelativeLayout>
