<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/rectangle">


    <com.zxinsight.MWImageView
        android:id="@+id/detail_icon"
        android:layout_width="130dp"
        android:layout_height="145dp"
        android:scaleType="fitXY"
        android:background="@drawable/detail01"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="@string/detail_title1"
        android:textSize="14sp"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/detail_icon" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:id="@+id/line"
        android:layout_margin="5dp"
        android:layout_below="@id/title"
        android:background="@color/detail_text"
        />

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/detail_text"
        android:text="@string/detail_price1"
        android:layout_below="@id/line"
        android:ellipsize="end"
        android:textSize="14sp"
        android:layout_alignLeft="@+id/title" />

</RelativeLayout>